<?xml version="1.0"?>

<widgets>
    <blog_taxonomy_view type="dls_blog/taxonomy_widget_view" translate="name description" module="dls_blog">
        <name>Taxonomy view</name>
        <description>Taxonomy view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <taxonomy_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>dls_blog/adminhtml_taxonomy_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </taxonomy_id>
        </parameters>
    </blog_taxonomy_view>
    <blog_taxonomy_link type="dls_blog/taxonomy_widget_link" translate="name description" module="dls_blog">
        <name>Category link</name>
        <description>Category link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <taxonomy_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>dls_blog/adminhtml_taxonomy_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </taxonomy_id>
        </parameters>
    </blog_taxonomy_link>
    <blog_post_view type="dls_blog/post_widget_view" translate="name description" module="dls_blog">
        <name>Post view</name>
        <description>Post view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <post_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Post</label>
                <type>label</type>
                <helper_block>
                    <type>dls_blog/adminhtml_post_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Post</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </post_id>
        </parameters>
    </blog_post_view>
    <blog_post_link type="dls_blog/post_widget_link" translate="name description" module="dls_blog">
        <name>Post link</name>
        <description>Post link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <post_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Post</label>
                <type>label</type>
                <helper_block>
                    <type>dls_blog/adminhtml_post_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Post</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </post_id>
        </parameters>
    </blog_post_link>
    <blog_taxonomy_subtree type="dls_blog/taxonomy_widget_subtree" translate="name description" module="dls_blog">
        <name>Category subtree</name>
        <description>Category subtree widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <taxonomy_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Category</label>
                <type>label</type>
                <helper_block>
                    <type>dls_blog/adminhtml_taxonomy_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Category</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </taxonomy_id>
            <recursion type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <value>0</value>
                <label>Levels to show (0 for all)</label>
                <type>text</type>
                <sort_order>20</sort_order>
            </recursion>
        </parameters>
    </blog_taxonomy_subtree>
</widgets>
