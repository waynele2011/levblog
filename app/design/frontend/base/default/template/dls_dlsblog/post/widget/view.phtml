<?php $_post = $this->getCurrentPost(); ?>
<?php if ($_post) : ?>
    <div class="post-widget-view">
        <h3><?php echo $_post->getTitile() ?></h3>
        <div>
            <div class="titile-widget">
                <?php echo Mage::helper('dls_dlsblog')->__('Title'); ?>:<?php echo $_post->getTitile(); ?>
