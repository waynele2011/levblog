                <?php echo Mage::helper('dls_dlsblog')->__('Short content'); ?>:<?php echo $_post->getShortContent(); ?>
            </div>
            <div class="publish_status-widget">
                <?php echo Mage::helper('dls_dlsblog')->__("Publishing status"); ?>:<?php echo $_post->getAttributeText('publish_status'); ?>
